@{
    ViewBag.Title = "CadastroFuncionario";
    Layout = "~/SharedMaster/MasterADM.cshtml";
}

@model Site.Models.ModelCliente

<div class="row" style="margin: 5rem 0">
    <div class="col-sm-6 col-sm-offset-3">
        <div id="DivIncluir" class="panel panel-primary">
            <div class="panel-heading">
                <div class="panel-title text-center">Inclusão de Cliente</div>
            </div>
            <div class="panel-body">
                @using (Html.BeginForm("CadastroClienteOld", "ADM", FormMethod.Post))
                {
                    <div style="margin-bottom: 25px" class="input-group">
                        <span class="input-group-addon">Nome Cliente</span>
                        @Html.TextBoxFor(f => f.NomeCliente, new { @class = "form-control", @placeholder = "Digite aqui", autocomplete = "off" })
                        @Html.ValidationMessageFor(u => u.NomeCliente, null, new { @style = "color: red;font-weight:bold;" })
                    </div>
                    <div style="margin-bottom: 25px" class="input-group">
                        <span class="input-group-addon">Email Cliente</span>
                        @Html.TextBoxFor(f => f.EmailCliente, new { @class = "form-control", @placeholder = "Digite aqui", autocomplete = "off" })
                        @Html.ValidationMessageFor(f => f.EmailCliente, null, new { @style = "color: red;font-weight:bold;" })
                        @*<input id="txtsobrenome" type="text"   />*@
                    </div>
    
                    <div style="margin-bottom: 25px" class="input-group">
                        <span class="input-group-addon">CPF Cliente</span>
                        @Html.TextBoxFor(f => f.CPFCliente, new { @class = "form-control", @placeholder = "Digite aqui", autocomplete = "off" })
                        @Html.ValidationMessageFor(f => f.CPFCliente, null, new { @style = "color: red;font-weight:bold;" })
                        @*<input id="txtsobrenome" type="text"   />*@
                    </div>
                    <div class="text-center">
                        <input type="submit" value="Incluir Cliente" class="btn btn-primary" />
                    </div>
                    <div class="text-center">
                        <label class="FonteMenu">@ViewBag.Mensagem</label>
                    </div>
                }
            </div>
        </div>
    </div>
</div>
<div class="row">
    <div class="col-sm-12">
        <button class="btn btn-success" type="button" onclick="(function(){window.history.back()})()">
            <i class="glyphicon glyphicon-arrow-left"></i>
            Voltar
        </button>
    </div>
</div>