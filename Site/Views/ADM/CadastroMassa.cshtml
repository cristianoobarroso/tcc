@{
ViewBag.Title = "CadastroMassa";
Layout = "~/SharedMaster/MasterADM.cshtml";
}
@model Site.Models.ModelMassa
<div class="row" style="margin: 5rem 0">
    <div class="col-sm-6 col-sm-offset-3">
        <div id="DivIncluir" class="panel panel-primary">
            <div class="panel-heading">
                <div class="panel-title text-center">Inclusão de Pratos</div>
            </div>
            <div class="panel-body">
                @using (Html.BeginForm("CadastroMassas", "ADM", FormMethod.Post))
                {

                <div style="margin-bottom: 25px" class="input-group">
                    <span class="input-group-addon">Nome do Prato</span>
                    @Html.TextBoxFor(f => f.NomeMassa, new { @class = "form-control", @placeholder = "Digite aqui", autocomplete = "off" })
                    @Html.ValidationMessageFor(u => u.NomeMassa, null, new { @style = "color: red;font-weight:bold;"})
                </div>

                <div style="margin-bottom: 25px" class="input-group">
                    <span class="input-group-addon">Valor</span>
                    @Html.TextBoxFor(f => f.Valor, new { @class = "form-control", @placeholder = "Digite aqui",autocomplete = "off" })
                    @Html.ValidationMessageFor(u => u.Valor, null, new { @style = "color: red;font-weight:bold;" })
                </div>
                @*<div style="margin-bottom: 25px" class="input-group">
                    <span class="input-group-addon">Quantidade Compra</span>
                    @Html.TextBoxFor(f => f.QTDEMassaEstoque, new { @class = "form-control", @placeholder = "Digite aqui", autocomplete = "off" })
                    @Html.ValidationMessageFor(f => f.QTDEMassaEstoque, null, new { @style = "color:red;font-weight:bold;" })
                    @*<input id="txtsobrenome" class="form-control" type="text" />
                </div>*@

                @*<div style="margin-bottom: 25px" class="input-group">
                    <span class="input-group-addon">Tipo Queijo</span>
                    @Html.TextBoxFor(f => f.TipoMassa, new { @class = "form-control", @placeholder = "Digite aqui", autocomplete = "off" })
                    @Html.ValidationMessageFor(f => f.TipoMassa, null, new { @style = "color: red;font-weight:bold;" })
                    @*<input id="txtsobrenome" class="form-control" type="text" />
                </div>*@
                <div class="text-center">
                    <input type="submit" value="Incluir Massa" class="btn btn-primary" />
                    @*<input action="action" type="button" value="Voltar" onclick="history.go(-1);" class="btn btn-primary" />*@
                </div>
                <br />
                <div class="text-center">

                    <label class="FonteMenu">@ViewBag.Mensagem</label>
                </div>
                }
            </div>
        </div>
    </div>
</div>
<div class="row">
    <div class="col-sm-12">
        <button class="btn btn-success" type="button" onclick="(function(){window.history.back()})()">
            <i class="glyphicon glyphicon-arrow-left"></i>
            Voltar
        </button>
    </div>
</div>
<script src="~/Scripts/jquery-1.10.2.min.js"></script>