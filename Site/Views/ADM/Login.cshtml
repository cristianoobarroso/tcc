
<!DOCTYPE html>
@model Site.Models.ModelFuncionario

<meta name="viewport" content="width=device-width" />
<title>Login</title>
<link href="~/Content/bootstrap.css" rel="stylesheet" />
<link href="~/Content/bootstrap-theme.css" rel="stylesheet" />
<br />
<br />
<br />
<br />
<br />
<div class="container" style="margin-top:40px">
    <div class="row">
        <div class="col-sm-6 col-md-4 col-md-offset-4">
            <div class="panel panel-primary">
                <div class="panel-heading">
                    <strong> Login </strong>
                </div>
                <div class="panel-body">
                    @*<form role="form">*@
                    <fieldset>
                        <div class="row">

                        </div>
                        <div class="row">


                            @using (Html.BeginForm("ValidaUsuario", "ADM", FormMethod.Post))
                            {
                                <div class="col-sm-12 col-md-10  col-md-offset-1 ">
                                    <div class="form-group">
                                        <div class="input-group">
                                            <span class="input-group-addon">
                                                <i class="glyphicon glyphicon-user"></i>
                                                @Html.TextBoxFor(f => f.Login)
                                            </span>


                                        </div>
                                    </div>

                                    <div class="form-group">
                                        <div class="input-group">
                                            <span class="input-group-addon">
                                                <i class="glyphicon glyphicon-lock"></i>
                                                @Html.PasswordFor(f => f.Senha)
                                            </span>

                                        </div>
                                    </div>

                                    <div class="form-group">

                                    </div>

                                    <div class="form-group">
                                        @*<input type="submit" class="btn btn-lg btn-primary btn-block" value="Entrar">*@
                                        <input type="submit" value="Entrar" class="btn btn-lg btn-primary btn-block" />
                                    </div>
                                </div>
                                <div class="text-center">
                                    <label class="FonteMenu">@ViewBag.Mensagem</label>
                                </div>
                            }
                        </div>
                    </fieldset>
                    @*</form>*@
                </div>
                @*<div class="panel-footer ">
                    Esqueceu sua senha ?  <a href="#" onClick=""> Clique aqui </a>
                </div>*@
            </div>
        </div>
    </div>
</div>


