
@{
    ViewBag.Title = "CadastroCerveja";
    Layout = "~/SharedMaster/MasterADM.cshtml";
}

@model Site.Models.ModelCerveja

<title>Cadastro de Cerveja</title>
<script src="~/Scripts/jquery-1.10.2.min.js"></script>
<div class="row">
    <div class="col-sm-3">
    </div>
    <div class="col-sm-6">
        <div class="d1">
            <div id="DivIncluir" class="panel panel-primary">
                <div class="panel-heading">
                    <div class="panel-title text-center">Inclusão de Cervejas</div>
                </div>
                <br />
                @using (Html.BeginForm("CadastroCervejas", "ADM", FormMethod.Post))
                {

                    <div style="margin-bottom: 25px" class="input-group">
                        <span class="input-group-addon">Nome Cerveja</span>
                        @Html.TextBoxFor(f => f.NomeCerveja, new { @class = "col-xs10", @placeholder = "Digite aqui", style = "height:28;px;width:310px;", autocomplete = "off" })
                        @Html.ValidationMessageFor(u => u.NomeCerveja)
                    </div>
                    <div style="margin-bottom: 25px" class="input-group">
                        <span class="input-group-addon">Quantidade Compra</span>
                        @Html.TextBoxFor(f => f.QTDCervejaEstoque, new { @class = "col-xs-10", @placeholder = "Digite aqui", style = "height:28px;width:140px;", autocomplete = "off" })
                        @Html.ValidationMessageFor(f => f.QTDCervejaEstoque)
                        @*<input id="txtsobrenome" type="text"   />*@
                    </div>

                    <div style="margin-bottom: 25px" class="input-group">
                        <span class="input-group-addon">Valor</span>
                        @Html.TextBoxFor(f => f.ValorCerveja, new { @class = "col-xs-10", @placeholder = "Digite aqui", style = "height:28px;width:140px;", autocomplete = "off" })
                        @Html.ValidationMessageFor(f => f.ValorCerveja)
                        @*<input id="txtsobrenome" type="text"   />*@
                    </div>

                    <div style="margin-bottom: 25px" class="input-group">
                        <span class="input-group-addon">Nacionalidade</span>
                        @Html.TextBoxFor(f => f.NacionalidadeCerveja, new { @class = "col-xs-10", @placeholder = "Digite aqui", style = "height:28px;width:140px;", autocomplete = "off" })
                        @Html.ValidationMessageFor(f => f.NacionalidadeCerveja)
                        @*<input id="txtsobrenome" type="text"   />*@
                    </div>

                    <div class="text-center">
                        <input type="submit" value="Incluir Cerveja" class="btn btn-primary" />
                        <input action="action" type="button" value="Voltar" onclick="history.go(-1);" class="btn btn-primary" />
                    </div>
                    <br />
                    <div class="text-center">

                        <label class="FonteMenu">@ViewBag.Mensagem</label>
                    </div>
                }
            </div>
        </div>

        <div class="col-sm-3">
        </div>
    </div>
</div>



