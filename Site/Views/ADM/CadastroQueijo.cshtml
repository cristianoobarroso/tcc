
@{
    ViewBag.Title = "CadastroQueijo";
    Layout = "~/SharedMaster/MasterADM.cshtml";
}
@model Site.Models.ModelQueijo

<div class="row">
    <div class="col-sm-3">
        <a href="~/ADM/CadastroProduto">
            <img src="~/img/voltar.png" width="120" height="120" />
        </a>
    </div>
</div>


<title>Cadastro de Queijo</title>
<script src="~/Scripts/jquery-1.10.2.min.js"></script>
<div class="row">
    <div class="col-sm-3">
    </div>
    <div class="col-sm-6">
        <div class="d1">
            <div id="DivIncluir" class="panel panel-primary">
                <div class="panel-heading">
                    <div class="panel-title text-center">Inclusão de Queijos</div>
                </div>
                <br />
                @using (Html.BeginForm("CadastroQueijos", "ADM", FormMethod.Post))
                {

                    <div style="margin-bottom: 25px" class="input-group">
                        <span class="input-group-addon">Nome do Queijo</span>
                        @Html.TextBoxFor(f => f.NomeQueijo, new { @class = "col-xs10", @placeholder = "Digite aqui", style = "height:28;px;width:310px;", autocomplete = "off" })
                        @Html.ValidationMessageFor(u => u.NomeQueijo, null, new { @style = "color: red;font-weight:bold;" })
                    </div>
                    <div style="margin-bottom: 25px" class="input-group">
                        <span class="input-group-addon">Quantidade em estoque</span>
                        @Html.TextBoxFor(f => f.QTDQueijoEstoque, new { @class = "col-xs-10", @placeholder = "Digite aqui", style = "height:28px;width:140px;", autocomplete = "off" })
                        @Html.ValidationMessageFor(f => f.QTDQueijoEstoque, null, new { @style = "color: red;font-weight:bold;" })
                        @*<input id="txtsobrenome" type="text"   />*@
                    </div>

                    <div style="margin-bottom: 25px" class="input-group">
                        <span class="input-group-addon">Tipo Queijo</span>
                        @Html.TextBoxFor(f => f.TipoQueijo, new { @class = "col-xs-10", @placeholder = "Digite aqui", style = "height:28px;width:140px;", autocomplete = "off" })
                        @Html.ValidationMessageFor(f => f.TipoQueijo, null, new { @style = "color: red;font-weight:bold;" })
                        @*<input id="txtsobrenome" type="text"   />*@
                    </div>

                    <div style="margin-bottom: 25px" class="input-group">
                        <span class="input-group-addon">Nacionalidade Queijo</span>
                        @Html.TextBoxFor(f => f.Nacionalidade, new { @class = "col-xs-10", @placeholder = "Digite aqui", style = "height:28px;width:140px;", autocomplete = "off" })
                        @Html.ValidationMessageFor(f => f.Nacionalidade, null, new { @style = "color: red;font-weight:bold;" })
                        @*<input id="txtsobrenome" type="text"   />*@
                    </div>

                    <div style="margin-bottom: 25px" class="input-group">
                        <span class="input-group-addon">Valor</span>
                        @Html.TextBoxFor(f => f.ValorQueijo, new { @class = "col-xs-10", @placeholder = "Digite aqui", style = "height:28px;width:140px;", autocomplete = "off" })
                        @Html.ValidationMessageFor(f => f.ValorQueijo, null, new { @style = "color: red;font-weight:bold;" })
                        @*<input id="txtsobrenome" type="text"   />*@
                    </div>


                    <div class="text-center">
                        <input type="submit" value="Incluir Queijo" class="btn btn-primary" />
                        @*<input action="action" type="button" value="Voltar" onclick="history.go(-1);" class="btn btn-primary" />*@
                    </div>
                    <br />
                    <div class="text-center">

                        <label class="FonteMenu">@ViewBag.Mensagem</label>
                    </div>
                }
            </div>
        </div>

        <div class="col-sm-3">
        </div>
    </div>
</div>


