
@{
    ViewBag.Title = "CadastroBuffet";
    Layout = "~/SharedMaster/MasterADM.cshtml";
}

@model Site.Models.ModelBuffet

<div class="row">
    <div class="col-sm-3">
        <a href="~/ADM/CadastroProduto">
            <img src="~/img/voltar.png" width="120" height="120" />
        </a>
    </div>
</div>

<title>Cadastro de serviço</title>
<script src="~/Scripts/jquery-1.10.2.min.js"></script>
<div class="row">
    <div class="col-sm-3">
    </div>
    <div class="col-sm-6">
        <div class="d1">
            <div id="DivIncluir" class="panel panel-primary">
                <div class="panel-heading">
                    <div class="panel-title text-center">Inclusão de serviço</div>
                </div>
                <br />
                @using (Html.BeginForm("CadastroBuffet", "ADM", FormMethod.Post))
                {

                    <div style="margin-bottom: 25px" class="input-group">
                        <span class="input-group-addon">Nome serviço</span>
                        @Html.TextBoxFor(f => f.NomeBuffet, new { @class = "col-xs10", @placeholder = "Digite aqui", style = "height:28;px;width:310px;", autocomplete = "off" })
                        @Html.ValidationMessageFor(u => u.NomeBuffet, null, new { @style = "color: red;font-weight:bold;" })
                    </div>
                    <div style="margin-bottom: 25px" class="input-group">
                        <span class="input-group-addon">Nacionalidade serviço</span>
                        @Html.TextBoxFor(f => f.NacionalidadeBuffet, new { @class = "col-xs-10", @placeholder = "Digite aqui", style = "height:28px;width:140px;", autocomplete = "off" })
                        @Html.ValidationMessageFor(f => f.NacionalidadeBuffet, null, new { @style = "color: red;font-weight:bold;" })
                        @*<input id="txtsobrenome" type="text"   />*@
                    </div>

                    <div style="margin-bottom: 25px" class="input-group">
                        <span class="input-group-addon">Tipo serviço</span>
                        @Html.TextBoxFor(f => f.TipoBuffet, new { @class = "col-xs-10", @placeholder = "Digite aqui", style = "height:28px;width:140px;", autocomplete = "off" })
                        @Html.ValidationMessageFor(f => f.TipoBuffet, null, new { @style = "color: red;font-weight:bold;" })
                        @*<input id="txtsobrenome" type="text"   />*@
                    </div>

                    <div style="margin-bottom: 25px" class="input-group">
                        <span class="input-group-addon">Valor serviço</span>
                        @Html.TextBoxFor(f => f.ValorBuffet, new { @class = "col-xs-10", @placeholder = "Digite aqui", style = "height:28px;width:140px;", autocomplete = "off" })
                        @Html.ValidationMessageFor(f => f.ValorBuffet, null, new { @style = "color: red;font-weight:bold;" })
                        @*<input id="txtsobrenome" type="text"   />*@
                    </div>

                    <div class="text-center">
                        <input type="submit" value="Incluir serviço" class="btn btn-primary" />

                    </div>
                    <br />
                    <div class="text-center">

                        <label class="FonteMenu">@ViewBag.Mensagem</label>
                    </div>
                }
            </div>
        </div>

        <div class="col-sm-3">
        </div>
    </div>
</div>






