@{
    ViewBag.Title = "CadastroUsuario";
    Layout = "~/SharedMaster/MasterADM.cshtml";
}
@model Site.Models.ModelFuncionario
<div class="row" style="margin: 5rem 0">
    <div class="col-sm-6 col-sm-offset-3">
    <div id="DivIncluir" class="panel panel-primary">
                <div class="panel-heading">
                    <div class="panel-title text-center">Inclusão de Usuário</div>
                </div>
                <div class="panel-body">
                    @using (Html.BeginForm("CadastroUsuario", "ADM", FormMethod.Post))
                    {
    
                        <div style="margin-bottom: 25px" class="input-group">
                            <span class="input-group-addon">Nome Funcionario</span>
                            @Html.TextBoxFor(f => f.NomeFuncionario, new { @class = "form-control", @placeholder = "Digite aqui", autocomplete = "off" })
                            @Html.ValidationMessageFor(u => u.NomeFuncionario, null, new { @style = "color: red;font-weight:bold;" })
                        </div>
                        <div style="margin-bottom: 25px" class="input-group">
                            <span class="input-group-addon">Login</span>
                            @Html.TextBoxFor(f => f.Login, new { @class = "form-control", @placeholder = "Digite aqui", autocomplete = "off" })
                            @Html.ValidationMessageFor(f => f.Login, null, new { @style = "color: red;font-weight:bold;" })
                            @*<input id="txtsobrenome" type="text"   />*@
                        </div>
    
                        <div style="margin-bottom: 25px" class="input-group">
                            <span class="input-group-addon">Senha</span>
                            @Html.TextBoxFor(f => f.Senha, new { @class = "form-control", @placeholder = "Digite aqui", autocomplete = "off" })
                            @Html.ValidationMessageFor(f => f.Senha, null, new { @style = "color: red;font-weight:bold;" })
                            @*<input id="txtsobrenome" type="text"   />*@
                        </div>
    
                         List<SelectListItem> listPerfis = new List<SelectListItem>(); 
                            listPerfis.Add(new SelectListItem
                            {
                                Text = "Garçom",
                                Value = "1",
                                // Selected =
                            });
                            listPerfis.Add(new SelectListItem
                            {
                                Text = "Gerente",
                                Value = "2",
                                //Selected =
                            });
    
                           
                        <div style="margin-bottom: 25px" class="input-group">
                            <span class="input-group-addon">Perfil</span>
                            @Html.DropDownList("ddlPerfil", (IEnumerable<SelectListItem>)listPerfis, "selecione", new { @class = "form-control" })
                            @Html.ValidationMessageFor(f => f.Perfil, null, new { @style = "color: red;font-weight:bold;" })
                            @*<input id="txtsobrenome" type="text"   />*@
                        </div>
    
                        <div class="text-center">
                            <input type="submit" value="Incluir Usuario" class="btn btn-primary" />
                            @*<input action="action" type="button" value="Voltar" onclick="history.go(-1);" class="btn btn-primary" />*@
                        </div>
                        <br />
                        <div class="text-center">
    
                            <label class="FonteMenu">@ViewBag.Mensagem</label>
                        </div>
                    }
                </div>
            </div>
    </div>
</div>
<div class="row">
    <div class="col-sm-12">
        <button class="btn btn-success" type="button" onclick="(function(){window.history.back()})()">
            <i class="glyphicon glyphicon-arrow-left"></i>
            Voltar
        </button>
    </div>
</div>
<script src="~/Scripts/jquery-1.10.2.min.js"></script>

