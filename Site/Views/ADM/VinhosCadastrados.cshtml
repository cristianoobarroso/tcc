@{
    ViewBag.Title = "VinhosCadastrados";
    Layout = "~/SharedMaster/MasterADM.cshtml";
}

@using Domain.Entity
@using Infra.Repository;

<div class="row" style="margin: 5rem 0">
    <div class="col-sm-8 col-sm-offset-2">
        <div id="DivIncluir" class="panel panel-primary">
            <div class="panel-heading">
                <div class="panel-title text-center">Vinhos Cadastrados</div>
            </div>
            <div class="panel-body">
                @{
                    VinhoRepository vr = new VinhoRepository();
                    List<Vinho> listVinho = new List<Vinho>(vr.ObterTodos());
                }
                <table class="table table-striped table-bordered table-hover table-condensed">
                    <tr>
                        <td class="text-center">
                            <label class="FonteMenuLabel text-center">Nome </label>
                        </td>
                        <td class="text-center">
                            <label class="FonteMenuLabel text-center">Tipo </label>
                        </td>
                        <td class="text-center">
                            <label class="FonteMenuLabel text-center">Quantidade </label>
                        </td>
                        <td class="text-center">
                            <label class="FonteMenuLabel text-center">Nacionalidade</label>
                        </td>
                    </tr>
                    @foreach (var item in listVinho)
                    {
                        <tr>
                            <td class="text-center">
                                <label class="FonteMenuLabel text-center">@item.NomeVinho</label>
                            </td>
                            <td class="FonteMenu text-center">
                                <label class="FonteMenuLabel text-center">@item.TipoVinho</label>
                            </td>
                            <td class="text-center">
                                <label class="FonteMenuLabel text-center">@item.QTDVinhoEstoque</label>
                            </td>
                            <td class="text-center">
                                <label class="FonteMenu text-center">@item.Nacionalidade</label>
                            </td>
                        </tr>
                    }
                </table>
            </div>
        </div>
    </div>
</div>
<div class="row">
    <div class="col-sm-12">
        <button class="btn btn-success" type="button" onclick="(function(){window.history.back()})()">
            <i class="glyphicon glyphicon-arrow-left"></i>
            Voltar
        </button>
    </div>
</div>