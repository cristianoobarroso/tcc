@{
ViewBag.Title = "CadastroCerveja";
Layout = "~/SharedMaster/MasterADM.cshtml";
}

@model Site.Models.ModelCerveja

<div class="row" style="margin: 5rem 0">
    <div class="col-sm-6 col-sm-offset-3">
        <div id="DivIncluir" class="panel panel-primary">
            <div class="panel-heading">
                <div class="panel-title text-center">Inclusão de Cervejas</div>
            </div>
            <div class="panel-body">
                @using (Html.BeginForm("CadastroCervejas", "ADM", FormMethod.Post))
                {
                <div style="margin-bottom: 25px" class="input-group">
                    <span class="input-group-addon">Nome da Cerveja</span>
                    @Html.TextBoxFor(f => f.NomeCerveja, new { @class = "form-control", @placeholder = "Digite aqui", autocomplete = "off" })
                    @Html.ValidationMessageFor(u => u.NomeCerveja, null, new { @style = "color: red;font-weight:bold;"})
                </div>
                <div style="margin-bottom: 25px" class="input-group">
                    <span class="input-group-addon">Quantidade em estoque</span>
                    @Html.TextBoxFor(f => f.QTDCervejaEstoque, new { @class = "form-control", @placeholder = "Digite aqui", autocomplete = "off" })
                    @Html.ValidationMessageFor(f => f.QTDCervejaEstoque, null, new { @style = "color:red;font-weight:bold;" })
                    @*<input id="txtsobrenome" type="text" />*@
                </div>

                <div style="margin-bottom: 25px" class="input-group">
                    <span class="input-group-addon">Valor</span>
                    @Html.TextBoxFor(f => f.ValorCerveja, new { @class = "form-control", @placeholder = "Digite aqui", autocomplete = "off" })
                    @Html.ValidationMessageFor(f => f.ValorCerveja, null, new { @style = "color: red;font-weight:bold;"})
                    @*<input id="txtsobrenome" type="text" />*@
                </div>

                <div style="margin-bottom: 25px" class="input-group">
                    <span class="input-group-addon">Nacionalidade</span>
                    @Html.TextBoxFor(f => f.NacionalidadeCerveja, new { @class = "form-control", @placeholder = "Digite aqui", autocomplete = "off" })
                    @Html.ValidationMessageFor(f => f.NacionalidadeCerveja, null, new { @style = "color:red;font-weight:bold;" })
                    @*<input id="txtsobrenome" type="text" />*@
                </div>

                <div class="text-center">
                    <input type="submit" value="Incluir Cerveja" class="btn btn-primary" />
                    @*<input action="action" type="button" value="Voltar" onclick="history.go(-1);" class="btn btn-primary" />*@
                </div>
                <br />
                <div class="text-center">
                    <label class="FonteMenu">@ViewBag.Mensagem</label>
                </div>
                }
            </div>
        </div>
    </div>
</div>
<div class="row">
    <div class="col-sm-12">
        <button class="btn btn-success" type="button" onclick="(function(){window.history.back()})()">
            <i class="glyphicon glyphicon-arrow-left"></i>
            Voltar
        </button>
    </div>
</div>
<script src="~/Scripts/jquery-1.10.2.min.js"></script>