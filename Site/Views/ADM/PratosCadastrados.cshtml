
@{
    ViewBag.Title = "PratosCadastrados";
    Layout = "~/SharedMaster/MasterADM.cshtml";
}

@using Domain.Entity
@using Infra.Repository;


<div class="row">
    <div class="col-sm-3">
        <a href="~/ADM/MenuProdCadastro">
            <img src="~/img/voltar.png" width="120" height="120" />
        </a>
    </div>
</div>

<div class="row">
    <div class="col-sm-3">
    </div>
    <div class="col-sm-6">
        <div class="d1">
            <br />
            <div id="DivIncluir" class="panel panel-primary">
                <div class="panel-heading">
                    <div class="panel-title text-center">Pratos Cadastrados</div>
                </div>
                @{
                    MassaRepository vr = new MassaRepository();
                    List<Massa> listMassa = new List<Massa>(vr.ObterTodos());
                }
                <table class="table table-striped table-bordered table-hover table-condensed">
                    <tr>
                        <td class="text-center">
                            <label class="FonteMenuLabel text-center">Nome </label>
                        </td>
                        @*<td class="text-center">
                                <label class="FonteMenuLabel text-center">Tipo </label>
                            </td>*@
                        <td class="text-center">
                            <label class="FonteMenuLabel text-center">Valor </label>
                        </td>
                        @*<td>
                            <label class="FonteMenuLabel text-center">Nacionalidade</label>
                        </td>*@
                    </tr>
                    @foreach (var item in listMassa)
                    {
                        <tr>
                            <td class="text-center">
                                <label class="FonteMenuLabel text-center">@item.NomeMassa</label>
                            </td>
                            @*<td class="FonteMenu text-center">
                                    <label class="FonteMenuLabel text-center">@item.TipoVinho</label>
                                </td>*@
                            <td class="text-center">
                                <label class="FonteMenuLabel text-center">@item.Valor</label>
                            </td>
                            @*<td>
                                <label class="FonteMenu text-center">@item.Nacionalidade</label>
                            </td>*@
                        </tr>
                    }

                </table>
            </div>
        </div>
    </div>
</div>
<div class="col-sm-3">
</div>


